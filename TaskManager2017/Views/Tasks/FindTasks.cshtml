@model TaskManager.ViewModels.FindTasksViewModel

@if (Model.Teams.Count() != 0)
{
    <h5>Here you can browse through all projects, or a specific team, to find tasks you want to work on.</h5>
    <br />
    <h2>If you want to view your teams projects, select the team here</h2>
    <br />
    @using (Html.BeginForm("TeamProjects", "Projects", FormMethod.Post))
    {
        <form>
            <div class="form-group">
                @Html.DropDownList("Team", new SelectList(Model.Teams, "Value", "Text"), "-Select Team-")
            </div>
            <input type="submit" value="Select" />
        </form>
    }
}
<h1>All Projects</h1>

@foreach (var project in Model.AllProjects)
{
    <h1>Title: <a asp-controller="Tasks" asp-action="FindTasks_ViewTasks" asp-route-id="@project.ProjectID">@project.Name</a></h1>
    <h4>Created by: @project.CreatedBy.ToString()</h4>
    <h2> Tasks: @project.TaskCount.ToString()</h2>

}




@if (Model.AllProjects.Count == 0)
{
    <h1>No projects to display</h1>

}
