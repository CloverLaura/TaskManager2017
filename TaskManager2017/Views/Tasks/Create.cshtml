@model TaskManager.Models.Task

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Task</h4>
<h5>Create tasks that need to be finished in order for your project to be complete. <br /> Users will grab tasks they can complete and let you know when they are done.</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" name="addNewTask" value="Add new task" />
                <input type="submit" name="finish" value="Finish" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
