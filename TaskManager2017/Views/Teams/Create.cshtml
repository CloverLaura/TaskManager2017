@model TaskManager.Models.Team

<div class="alert alert-dismissible alert-info">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h5>Creating a team will allow your teammates to be connected and will make it easy for them to find projects you create.</h5>
</div>
<br />

<h4>Create team</h4>
<hr />
<br />
<div class="card border-primary mb-3" style="max-width: 30rem;">
    <div class="card-header" style="color:red;">Team name must be unique, description is optional</div>
    <div class="card-body" style="margin: 0 auto; float:none; margin-bottom: 10px;">
        <div class="row">
            <div class="col-md-4" style="width: 700px;">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" style="width: 250px;" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" style="width:250px; height:200px;"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
