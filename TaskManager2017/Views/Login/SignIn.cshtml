@model TaskManager.ViewModels.SignInViewModel
@{
}

<br />
<br />
<div class="card border-primary mb-3" style="max-width: 30rem;">
    <div class="card-header">Login</div>
    <div class="card-body" style="margin: 0 auto; float:none; margin-bottom: 10px;">
        <form method="post">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-group" asp-for="Email" /><br />
                <span asp-validation-for="Email" style="color:red"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input class="form-group" asp-for="Password" type="password" /><br />
                <span asp-validation-for="Password" style="color:red"></span>
            </div>

            <input type="submit" value="Login" />
        </form>
        <!--<h4 class="card-title">Primary card title</h4>-->
        <!--<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>-->
    </div>
</div>



